<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="610" d:DesignHeight="480"
        x:Class="PurpleExplorer.Views.ConnectionStringWindow"
        xmlns:vm="clr-namespace:PurpleExplorer.ViewModels;assembly=PurpleExplorer"
        Title="Connect to Service Bus" Icon="/Assets/avalonia-logo.ico"
        Width="610" Height="480"
        WindowStartupLocation="CenterOwner">

    <Design.DataContext>
        <vm:ConnectionStringWindowViewModel />
    </Design.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="320" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>

        <CheckBox Grid.Row="0" Margin="5, 0, 0, 0" IsChecked="{Binding UseManagedIdentity}">Managed Identity</CheckBox>

        <Label Grid.Row="1" Margin="5, 0, 0, 0">Connection String:</Label>

        <TextBox Grid.Row="2" Height="30" Width="600" TextWrapping="Wrap" HorizontalAlignment="Left" Margin="5, 5, 0, 0"
                 VerticalAlignment="Top" Text="{Binding Path=ConnectionString, Mode=TwoWay}" />

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="5, 0, 0, 0">
            <Button Width="200" Height="30" Margin="0,0,5,0" HorizontalAlignment="Left" VerticalAlignment="Top"
                IsEnabled="{Binding ConnectionString, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                Click="btnSendClick">
                Connect to Service Bus
            </Button>
            <Button Width="200" Height="30" Margin="0,0,5,0" HorizontalAlignment="Left" VerticalAlignment="Top"
            IsEnabled="{Binding ConnectionString, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                Click="btnSaveConnectionString">
                Save Connection String
            </Button>
        </StackPanel>
        
        <ListBox Grid.Row="4" Name="lsbSavedConnectionString" Margin="5,0,5,0" Items="{Binding Path=SavedConnectionStrings, Mode=TwoWay}" 
                 Width="600" Height="300" VerticalAlignment="Top" SelectionChanged="lsbConnectionStringSelectionChanged" HorizontalAlignment="Left">
        
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding ConnectionString}" />
                        <TextBlock Text="[Managed Identity]" IsVisible="{Binding UseManagedIdentity}" Margin="5,0,0,0" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Grid.Row="5" Width="200" Height="30" Margin="5,0,5,0" HorizontalAlignment="Left" VerticalAlignment="Top"
             Click="btnDeleteConnectionString">
            Remove
        </Button>
    </Grid>
</Window>